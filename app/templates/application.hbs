<div class="jumbotron">
  <h1>E-Commerce</h1>
  <div class="shoppingCart">
    {{cart.items.length}}
    <img class="shoppingCartImg" src="http://image005.flaticon.com/3/png/512/2/2772.png" alt="shopping cart logo" />
  </div>
</div>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        {{#link-to 'index' class="navbar-brand"}}Ecommerce{{/link-to}}
      </div>

      <div class="collapse navbar-collapse" id="main-navbar">
        <ul class="nav navbar-nav">
          {{#bs-dropdown tagName="li"}}
          {{#bs-dropdown-toggle}}Store Departments <span class="caret"></span>{{/bs-dropdown-toggle}}
          {{#bs-dropdown-menu}}

          <li>{{#link-to "store"}}Store{{/link-to}}</li>
          {{/bs-dropdown-menu}}
          {{/bs-dropdown}}
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>{{#link-to "checkout"}}Checkout{{/link-to}}</li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container">

    {{outlet}}
  </div>
